@{
    ViewData["Title"] = "App ClientesProspectos";
} 
@Html.AntiForgeryToken()

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">  
    <link href="~/css/Inicio.css" rel="stylesheet" />
    <title>Directorio Telefonico</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link href="https://code.jquery.com/jquery-1.10.2.js" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.7/dist/sweetalert2.all.min.js" integrity="sha256-oRlny88mMfxoVA0EAcCwBibDn14Ui/A9Wc8903cpHMk=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.7/dist/sweetalert2.all.min.js" integrity="sha256-oRlny88mMfxoVA0EAcCwBibDn14Ui/A9Wc8903cpHMk=" crossorigin="anonymous"></script>

</head>
<body style="background-color: silver;">

    <input id="ideus" value="@ViewData["Usuario"]" style="display:none;" disabled="disabled" />

    <script>
        var ideus = document.getElementById('ideus')
        if (ideus.value == "" || ideus.value == null) { 
        window.location.href = "/"
        }
    </script>

    <div id="ElLoader" class="preloader" style="display:none;">
        <img style=" width: 100%;" src="~/img/Loader.png" alt="">
    </div>

    <div style="display:flex; width:100%; height:10vh; justify-content:center;">
        <div class="tab-content" style="display:flex; flex-direction:row; align-items: center; justify-content:center;  margin-top:22px; background-color:green;">
            <h2 class="TituloH2">Clientes Prospectos</h2>
        </div>
    </div>

    <div class="tab-content" style="margin-top:22px; background-color:#f8f9fa;" id="VistaBlanca">

        <div  style=" width:100%; background-color:red; margin-top:100px; margin-bottom:100px;">
            <div class="album py-3 bg-light">
                <div class="container">
                    <div class="animate__animated animate__headShake">
                        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3" style="justify-content:center;">
           
                            @*<li><button class="dropdown-item" id="btnEdoCuenta">Estado de Cuenta</button></li>   *@
                            <button class="btn btn-primary" style="margin:auto; margin-bottom:30px; border-radius:20px; width:200px; height:200px; border-color:green; background-color:green; border-color:transparent;" onclick="location.href='/Home/Listado'"> LISTADO DE PROSPECTOS </button>

                            @*<li><button class="dropdown-item" id="btnSaldos" >Saldos</button></li>*@
                            <button class="btn btn-primary" style="margin:auto; margin-bottom:30px; border-radius:20px; width:200px; height:200px; border-color:green; background-color:green; border-color:transparent;" onclick="location.href='/Home/Captura'"> CAPTURA DE PROSPECTO </button>
                            
                            @*<li><button class="dropdown-item" id="btnAutorizacionesPedidos">Autorizaciones Pedidos</button></li>*@
                            <button class="btn btn-primary" style="margin:auto; margin-bottom:30px; border-radius:20px; width:200px; height:200px; border-color:green; background-color:green; border-color:transparent;" onclick="location.href='/Home/Evaluacion'"> EVALUACIÓN DEL PROSPECTO</button>

                        </div>
                    </div> 
                </div>
            </div>
        </div>                

    </div>

    <div class="tab-content" style="height:10vh; margin-top:22px; margin-bottom:22px;">
        <button class="btn btn-primary" style="background-color:green; border-color:green; margin-top:-10px;" onclick="location.href='/Home/Login'">Cerrar Sesion</button>
    </div>

    <script src="~/js/Inicio.js"></script>
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.7/dist/sweetalert2.all.min.js" integrity="sha256-oRlny88mMfxoVA0EAcCwBibDn14Ui/A9Wc8903cpHMk=" crossorigin="anonymous"></script>

</body>
</html>